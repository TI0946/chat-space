.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
      .side-bar__user-name__top-items__name
        =current_user.name
      .side-bar__user-name__top-items__icon
        = link_to new_group_path, class:"side-bar__user-name__top-items--btn" do
          = icon('fa', 'edit')
        = link_to edit_user_path(current_user), class:"side-bar__user-name__top-items--btn" do
          = icon('fas', 'cog')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__group
        = link_to group_messages_path(group) , class:"side-bar__group-list__group__btn" do
          .side-bar__group-list__group__btn__name
            = group.name
          .side-bar__group-list__group__btn__message
            = group.show_last_message
